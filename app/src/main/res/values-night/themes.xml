<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SnowSpotterApp2" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/snow_theme</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar, Navigation bar, and ActionBar color -->
        <item name="android:statusBarColor">@color/snow_theme</item>
        <item name="android:navigationBarColor">@color/snow_theme</item>
        <item name="actionBarStyle">@style/Widget.App.ActionBar</item>
    </style>

    <!-- Custom ActionBar style -->
    <style name="Widget.App.ActionBar" parent="Widget.MaterialComponents.ActionBar.Primary">
        <item name="background">@color/snow_theme</item>
    </style>
</resources>